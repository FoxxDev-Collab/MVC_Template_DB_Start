@{
    ViewData["Title"] = "Access Denied";
}

<div class="container" style="max-width: 600px; margin-top: 100px;">
    <div class="card">
        <div class="card-header bg-warning">
            <h4 class="mb-0">Access Denied</h4>
        </div>
        <div class="card-body">
            @{
                ViewData["Message"] = "<strong>Access Denied!</strong> You do not have permission to access this resource.";
                ViewData["Variant"] = "warning";
                ViewData["Dismissible"] = "False";
            }
            <partial name="_Alert" />

            <div class="text-center mt-4">
                <p>If you believe you should have access, please contact your administrator.</p>
                @{
                    ViewData["Text"] = "Go to Home";
                    ViewData["Href"] = Url.Action("Index", "Home");
                    ViewData["Variant"] = "primary";
                }
                <partial name="_Button" />
            </div>
        </div>
    </div>
</div>
