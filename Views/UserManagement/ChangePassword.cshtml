@model Compliance_Tracker.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container py-4" style="max-width: 600px;">
    @{
        ViewData["Items"] = new List<dynamic> {
            new { Text = "Home", Url = Url.Action("Index", "Home") },
            new { Text = "User Management", Url = Url.Action("Index") },
            new { Text = "Change Password", Url = "" }
        };
    }
    <partial name="_Breadcrumb" />

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Change Password</h5>
            @{
                ViewData["Text"] = @Model.Username;
                ViewData["Variant"] = "primary";
            }
            <partial name="_Badge" />
        </div>
        <div class="card-body">
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                ViewData["Message"] = "Please correct the errors below.";
                ViewData["Variant"] = "danger";
                ViewData["Dismissible"] = "False";
                <partial name="_Alert" />
            }

            <form asp-action="ChangePassword" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="Username" />

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label">New Password</label>
                    <input asp-for="NewPassword" class="form-control" type="password" placeholder="Enter new password" autocomplete="new-password" />
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    <small class="form-text text-muted-foreground d-block mt-1">
                        Password must be at least 12 characters and include uppercase, lowercase, number, and special character.
                    </small>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm new password" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-flex gap-2 justify-content-end">
                    @{
                        ViewData["Text"] = "Cancel";
                        ViewData["Href"] = Url.Action("Index");
                        ViewData["Variant"] = "secondary";
                    }
                    <partial name="_Button" />
                    @{
                        ViewData["Text"] = "Change Password";
                        ViewData["Type"] = "submit";
                        ViewData["Variant"] = "primary";
                    }
                    <partial name="_Button" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
