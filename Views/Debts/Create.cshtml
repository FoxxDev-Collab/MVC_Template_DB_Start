@using HLE.FamilyFinance.Services.Interfaces
@using HLE.FamilyFinance.Models.Enums
@model DebtCreateDto?
@{
    ViewData["Title"] = "Add Debt";
}

<div class="py-4">
    <h2><i class="bi-plus-circle me-2"></i>Add Debt</h2>
    <p class="text-muted">Track a loan, mortgage, or other debt.</p>

    <form asp-action="Create" method="post">
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Debt Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Name</label>
                                <input asp-for="Name" class="form-control" required placeholder="e.g., Home Mortgage" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Type</label>
                                <select asp-for="Type" asp-items="@(ViewData["DebtTypes"] as SelectList)" class="form-select"></select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Lender</label>
                                <input asp-for="Lender" class="form-control" placeholder="e.g., Wells Fargo" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Account Number (last 4 digits)</label>
                                <input asp-for="AccountNumberLast4" class="form-control" maxlength="4" placeholder="e.g., 1234" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Loan Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Original Principal</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="OriginalPrincipal" class="form-control money-input" type="text" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Current Balance</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="CurrentBalance" class="form-control money-input" type="text" required />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Interest Rate (APR %)</label>
                                <div class="input-group">
                                    <input asp-for="InterestRate" class="form-control" type="number" step="0.001" required />
                                    <span class="input-group-text">%</span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Term (Months)</label>
                                <input asp-for="TermMonths" class="form-control" type="number" placeholder="e.g., 360 for 30 years" />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Origination Date</label>
                                <input asp-for="OriginationDate" class="form-control" type="date" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Payment Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Minimum Payment</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="MinimumPayment" class="form-control money-input" type="text" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Payment Day of Month</label>
                                <input asp-for="PaymentDayOfMonth" class="form-control" type="number" min="1" max="31" value="1" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Link to Account (optional)</label>
                                <select asp-for="LinkedAccountId" asp-items="@(ViewData["Accounts"] as SelectList)" class="form-select">
                                    <option value="">None</option>
                                </select>
                                <small class="text-muted">Link to an existing account for automatic tracking</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="form-check">
                            <input asp-for="IncludeInNetWorth" class="form-check-input" type="checkbox" checked />
                            <label class="form-check-label">Include in net worth calculation</label>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="bi-check-lg me-1"></i>Create Debt</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card hint-card mb-3">
                    <div class="card-body">
                        <h6><i class="bi-info-circle me-2"></i>How Debts Work</h6>
                        <p class="small mb-2">Debts represent money you owe (loans, mortgages, credit cards). They subtract from your net worth.</p>
                        <p class="small mb-2"><strong>Example:</strong> You bought a house for $350,000 and owe $235,000:</p>
                        <ul class="small text-muted mb-0">
                            <li><strong>Original Principal:</strong> $350,000 (what you borrowed)</li>
                            <li><strong>Current Balance:</strong> $235,000 (what you still owe)</li>
                            <li><strong>Paid So Far:</strong> $115,000 (tracked automatically)</li>
                        </ul>
                    </div>
                </div>
                <div class="card hint-card mb-3">
                    <div class="card-body">
                        <h6><i class="bi-link-45deg me-2"></i>Linking to Assets</h6>
                        <p class="small mb-2">For secured debt (like a mortgage), create both an Asset and a Debt, then link them together:</p>
                        <ol class="small text-muted mb-0">
                            <li>Create the Asset first (e.g., house worth $400,000)</li>
                            <li>Create this Debt (e.g., mortgage at $235,000)</li>
                            <li>Edit the Asset and link this Debt</li>
                            <li>Net worth shows: $400K - $235K = $165K equity</li>
                        </ol>
                    </div>
                </div>
                <div class="card hint-card">
                    <div class="card-body">
                        <h6><i class="bi-lightbulb me-2"></i>Tips</h6>
                        <ul class="small text-muted mb-0">
                            <li>Update the current balance monthly to track progress</li>
                            <li>Amortization schedule calculates automatically</li>
                            <li>Link to a payment account for easy tracking</li>
                            <li>Use "Include in net worth" to control visibility</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
