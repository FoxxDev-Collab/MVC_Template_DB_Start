@using HLE.FamilyFinance.Services.Interfaces
@using HLE.FamilyFinance.Helpers
@model List<ImportBatchSummaryDto>
@{
    ViewData["Title"] = "Import History";
}

<div class="py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi-clock-history me-2"></i>Import History</h2>
        <div>
            <a asp-action="Index" class="btn btn-primary"><i class="bi-upload me-1"></i>New Import</a>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi-inbox fs-1 text-muted"></i>
                <p class="text-muted mt-2 mb-3">No import history yet. Upload a file to import transactions.</p>
                <a asp-action="Index" class="btn btn-primary"><i class="bi-upload me-1"></i>Import Transactions</a>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>File</th>
                            <th>Account</th>
                            <th>Format</th>
                            <th>Date</th>
                            <th class="text-center">Total</th>
                            <th class="text-center">Imported</th>
                            <th class="text-center">Duplicates</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var batch in Model.OrderByDescending(b => b.ImportedAt))
                        {
                            var statusBadge = batch.IsFinalized ? "bg-success" : "bg-warning text-dark";
                            var statusText = batch.IsFinalized ? "Completed" : "Pending";
                            <tr>
                                <td>
                                    <i class="bi-file-earmark me-2"></i>
                                    @batch.FileName
                                </td>
                                <td>@batch.AccountName</td>
                                <td>
                                    <span class="badge bg-secondary">@batch.Format</span>
                                </td>
                                <td>@batch.ImportedAt.ToString("MMM d, yyyy h:mm tt")</td>
                                <td class="text-center">@batch.TotalRows</td>
                                <td class="text-center text-success">@batch.ImportedCount</td>
                                <td class="text-center text-muted">@batch.DuplicateCount</td>
                                <td>
                                    <span class="badge @statusBadge">@statusText</span>
                                </td>
                                <td>
                                    @if (!batch.IsFinalized)
                                    {
                                        <a asp-action="Review" asp-route-id="@batch.Id" class="btn btn-sm btn-primary">Review</a>
                                        <form asp-action="Cancel" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@batch.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Cancel this import?')">Cancel</button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row mt-4 g-3">
            <div class="col-md-4">
                <div class="card hint-card">
                    <div class="card-body text-center">
                        <h3>@Model.Count</h3>
                        <small class="text-muted">Total Imports</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card hint-card">
                    <div class="card-body text-center">
                        <h3>@Model.Sum(b => b.ImportedCount)</h3>
                        <small class="text-muted">Transactions Imported</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card hint-card">
                    <div class="card-body text-center">
                        <h3>@Model.Sum(b => b.DuplicateCount)</h3>
                        <small class="text-muted">Duplicates Skipped</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
