@using HLE.FamilyFinance.Services.Interfaces
@using HLE.FamilyFinance.Helpers
@model List<ImportBatchSummaryDto>
@{
    ViewData["Title"] = "Import Transactions";
    var pendingBatchId = ViewData["PendingBatchId"] as int?;
}

<div class="py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="@IconHelper.Nav.Import me-2"></i>Import Transactions</h2>
        <div>
            <a asp-action="Rules" class="btn btn-outline-primary"><i class="bi-gear me-1"></i>Category Rules</a>
            <a asp-action="History" class="btn btn-outline-secondary"><i class="bi-clock-history me-1"></i>History</a>
        </div>
    </div>

    @if (pendingBatchId.HasValue)
    {
        <div class="alert alert-warning">
            <i class="bi-exclamation-triangle me-2"></i>
            You have a pending import that needs review.
            <a asp-action="Review" asp-route-id="@pendingBatchId" class="alert-link">Review now</a>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi-upload me-2"></i>Upload File</h5>
        </div>
        <div class="card-body">
            <form asp-action="Upload" method="post" enctype="multipart/form-data">
                <div class="row g-3">
                    <div class="col-md-5">
                        <label class="form-label">Account</label>
                        <select name="accountId" asp-items="@(ViewData["Accounts"] as SelectList)" class="form-select" required>
                            <option value="">Select account...</option>
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">File</label>
                        <input type="file" name="file" class="form-control" accept=".csv,.qfx,.ofx" required />
                        <small class="text-muted">Supported formats: CSV, QFX, OFX</small>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100"><i class="bi-upload me-1"></i>Upload</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi-info-circle me-2"></i>Supported Formats</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <h6><i class="bi-filetype-csv me-2"></i>CSV</h6>
                    <p class="text-muted small">Comma-separated values file. Wells Fargo format expected with columns: Date, Amount, *, *, Description</p>
                </div>
                <div class="col-md-4">
                    <h6><i class="bi-file-earmark me-2"></i>QFX / OFX</h6>
                    <p class="text-muted small">Quicken/Open Financial Exchange format. Standard bank export format with transaction details.</p>
                </div>
                <div class="col-md-4">
                    <h6><i class="bi-lightbulb me-2"></i>Tips</h6>
                    <p class="text-muted small">Set up category rules to automatically categorize imported transactions based on description patterns.</p>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any(b => !b.IsFinalized))
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi-hourglass-split me-2"></i>Pending Imports</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>File</th>
                            <th>Account</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var batch in Model.Where(b => !b.IsFinalized))
                        {
                            <tr>
                                <td>
                                    <i class="bi-file-earmark me-2"></i>
                                    @batch.FileName
                                </td>
                                <td>@batch.AccountName</td>
                                <td>@batch.ImportedAt.ToString("MMM d, yyyy h:mm tt")</td>
                                <td>
                                    <span class="badge bg-warning text-dark">@batch.PendingCount pending</span>
                                    @if (batch.DuplicateCount > 0)
                                    {
                                        <span class="badge bg-secondary">@batch.DuplicateCount duplicates</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Review" asp-route-id="@batch.Id" class="btn btn-sm btn-primary">Review</a>
                                    <form asp-action="Cancel" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@batch.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Cancel this import?')">Cancel</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
