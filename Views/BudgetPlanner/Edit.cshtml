@using HLE.FamilyFinance.Models.ViewModels
@using HLE.FamilyFinance.Models.Enums
@model BudgetPlannerProjectEditViewModel
@{
    ViewData["Title"] = "Edit Project";
}

<div class="py-4">
    <h2><i class="bi-pencil me-2"></i>Edit Project</h2>
    <p class="text-muted">Update project details.</p>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="SortOrder" />

        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Project Information</h5>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="row g-3">
                            <div class="col-md-8">
                                <label asp-for="Name" class="form-label">Project Name</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Status" class="form-label">Status</label>
                                <select asp-for="Status" asp-items="@(ViewData["StatusList"] as SelectList)" class="form-select"></select>
                            </div>
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TargetDate" class="form-label">Target Date (Optional)</label>
                                <input asp-for="TargetDate" class="form-control" type="date" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Appearance (Optional)</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Icon</label>
                                <partial name="_IconPicker" model="@(("Icon", Model.Icon))" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Color" class="form-label">Color</label>
                                <input asp-for="Color" class="form-control" type="color" style="height: 38px;" />
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-body">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="bi-check-lg me-1"></i>Save Changes</button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-danger mb-3">
                    <div class="card-header bg-danger text-white">
                        <h6 class="mb-0"><i class="bi-exclamation-triangle me-2"></i>Danger Zone</h6>
                    </div>
                    <div class="card-body">
                        <p class="small text-muted">Deleting this project will also remove all its items. This cannot be undone.</p>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this project? All items will be removed.');">
                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                <i class="bi-trash me-1"></i>Delete Project
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
