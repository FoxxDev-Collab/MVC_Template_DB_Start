@using HLE.FamilyFinance.Models.ViewModels
@using HLE.FamilyFinance.Models.Enums
@model BudgetPlannerProjectCreateViewModel
@{
    ViewData["Title"] = "Create Project";
}

<div class="py-4">
    <h2><i class="bi-plus-circle me-2"></i>Create Project</h2>
    <p class="text-muted">Plan a budget for a new project or purchase.</p>

    <form asp-action="Create" method="post">
        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Project Information</h5>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <div class="row g-3">
                            <div class="col-md-8">
                                <label asp-for="Name" class="form-label">Project Name</label>
                                <input asp-for="Name" class="form-control" placeholder="e.g., Backyard Sprinklers" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Status" class="form-label">Status</label>
                                <select asp-for="Status" asp-items="@(ViewData["StatusList"] as SelectList)" class="form-select"></select>
                            </div>
                            <div class="col-12">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="2" placeholder="Brief description of the project"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TargetDate" class="form-label">Target Date (Optional)</label>
                                <input asp-for="TargetDate" class="form-control" type="date" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Appearance (Optional)</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Icon</label>
                                <partial name="_IconPicker" model="@(("Icon", Model.Icon))" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Color" class="form-label">Color</label>
                                <input asp-for="Color" class="form-control" type="color" style="height: 38px;" />
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-body">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Any additional notes..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="bi-check-lg me-1"></i>Create Project</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card hint-card">
                    <div class="card-body">
                        <h6><i class="bi-lightbulb me-2"></i>Tips</h6>
                        <ul class="small text-muted mb-0">
                            <li>Create a project for any planned purchase or home improvement</li>
                            <li>Add items after creating the project</li>
                            <li>Use "Planning" status while gathering items</li>
                            <li>Switch to "Active" when you start saving</li>
                            <li>Mark as "Completed" once purchased</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
