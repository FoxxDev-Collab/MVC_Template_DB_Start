@using HLE.FamilyFinance.Services.Interfaces
@using HLE.FamilyFinance.Helpers
@model List<AccountSummaryDto>
@{
    ViewData["Title"] = "Accounts";
    var netWorth = ViewData["NetWorth"] as NetWorthSummaryDto;
}

<div class="py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Accounts</h2>
        <a asp-action="Create" class="btn btn-primary">+ Add Account</a>
    </div>

    @if (netWorth != null)
    {
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h6 class="text-white-50">Total Assets</h6>
                        <h3 class="mb-0">$@netWorth.TotalAssets.ToString("N2")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <h6 class="text-white-50">Total Liabilities</h6>
                        <h3 class="mb-0">$@netWorth.TotalLiabilities.ToString("N2")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h6 class="text-white-50">Net Worth</h6>
                        <h3 class="mb-0">$@netWorth.NetWorth.ToString("N2")</h3>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (Model.Count == 0)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <p class="text-muted mb-3">No accounts yet. Add your first account to start tracking.</p>
                <a asp-action="Create" class="btn btn-primary">Add Account</a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var account in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    @{
                                        var icon = account.Icon ?? IconHelper.GetAccountIcon(account.Type);
                                    }
                                    @if (icon.StartsWith("bi-"))
                                    {
                                        <i class="@icon fs-3 me-2"></i>
                                    }
                                    else
                                    {
                                        <span class="fs-3 me-2">@icon</span>
                                    }
                                    <h5 class="d-inline">@account.Name</h5>
                                    <p class="text-muted mb-2">@account.Type @(account.Institution != null ? $"â€¢ {account.Institution}" : "")</p>
                                </div>
                            </div>
                            <h3 class="@(account.CurrentBalance >= 0 ? "text-success" : "text-danger")">
                                $@account.CurrentBalance.ToString("N2")
                            </h3>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-action="Details" asp-route-id="@account.Id" class="btn btn-sm btn-outline-primary">View</a>
                            <a asp-action="Edit" asp-route-id="@account.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
