@model HLE.FamilyFinance.Models.Entities.Transaction
@{
    ViewData["Title"] = "Transaction Details";
    var amountClass = Model.Type switch
    {
        HLE.FamilyFinance.Models.Enums.TransactionType.Income => "text-success",
        HLE.FamilyFinance.Models.Enums.TransactionType.Expense => "text-danger",
        _ => "text-primary"
    };
}

<div class="py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Transactions</a></li>
            <li class="breadcrumb-item active">Details</li>
        </ol>
    </nav>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Transaction Details</h4>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">Edit</a>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h2 class="@amountClass mb-0">
                                @(Model.Type == HLE.FamilyFinance.Models.Enums.TransactionType.Income ? "+" : Model.Type == HLE.FamilyFinance.Models.Enums.TransactionType.Expense ? "-" : "")
                                $@Model.Amount.ToString("N2")
                            </h2>
                            <span class="badge bg-@(Model.Type == HLE.FamilyFinance.Models.Enums.TransactionType.Income ? "success" : Model.Type == HLE.FamilyFinance.Models.Enums.TransactionType.Expense ? "danger" : "primary")">
                                @Model.Type
                            </span>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <p class="text-muted mb-0">@Model.Date.ToString("dddd, MMMM d, yyyy")</p>
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <dl>
                                <dt>Payee</dt>
                                <dd>@(Model.Payee ?? "â€”")</dd>

                                <dt>Category</dt>
                                <dd>
                                    @if (Model.Category != null)
                                    {
                                        <span>@(Model.Category.Icon ?? "") @Model.Category.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Uncategorized</span>
                                    }
                                </dd>

                                <dt>Account</dt>
                                <dd>@Model.Account.Name</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl>
                                <dt>Status</dt>
                                <dd>
                                    @if (Model.IsReconciled)
                                    {
                                        <span class="badge bg-success">Reconciled</span>
                                    }
                                    else if (Model.IsCleared)
                                    {
                                        <span class="badge bg-info">Cleared</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Pending</span>
                                    }
                                </dd>

                                @if (Model.RecurringTransactionId.HasValue)
                                {
                                    <dt>Recurring</dt>
                                    <dd><span class="badge bg-info">From recurring template</span></dd>
                                }

                                @if (Model.LinkedTransactionId.HasValue)
                                {
                                    <dt>Linked Transfer</dt>
                                    <dd>
                                        <a asp-action="Details" asp-route-id="@Model.LinkedTransactionId">View linked transaction</a>
                                    </dd>
                                }
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <hr />
                        <h6>Description</h6>
                        <p>@Model.Description</p>
                    }

                    @if (Model.Tags != null && Model.Tags.Length > 0)
                    {
                        <hr />
                        <h6>Tags</h6>
                        <div>
                            @foreach (var tag in Model.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag</span>
                            }
                        </div>
                    }

                    <hr />
                    <small class="text-muted">
                        Created @Model.CreatedAt.ToString("MMM d, yyyy h:mm tt") by @Model.CreatedByUserId
                    </small>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">Actions</div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Transaction</a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger w-100"
                                    onclick="return confirm('Are you sure you want to delete this transaction?')">
                                Delete Transaction
                            </button>
                        </form>
                        <hr />
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to Transactions</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
