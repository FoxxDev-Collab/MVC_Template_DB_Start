@model HLE.FamilyFinance.Models.ViewModels.TransactionCreateViewModel
@{
    ViewData["Title"] = "Transfer Funds";
}

<div class="py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Transactions</a></li>
            <li class="breadcrumb-item active">Transfer</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Transfer Between Accounts</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Transfer" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Type" value="@HLE.FamilyFinance.Models.Enums.TransactionType.Transfer" />

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Transfer Amount</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Amount" class="form-control money-input" type="text" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-5">
                                <div class="mb-3">
                                    <label asp-for="AccountId" class="form-label">From Account</label>
                                    <select asp-for="AccountId" asp-items="@(ViewData["Accounts"] as SelectList)" class="form-select">
                                        <option value="">Select Source...</option>
                                    </select>
                                    <span asp-validation-for="AccountId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-2 d-flex align-items-center justify-content-center">
                                <span class="fs-4 text-muted">â†’</span>
                            </div>
                            <div class="col-md-5">
                                <div class="mb-3">
                                    <label asp-for="TransferToAccountId" class="form-label">To Account</label>
                                    <select asp-for="TransferToAccountId" asp-items="@(ViewData["Accounts"] as SelectList)" class="form-select">
                                        <option value="">Select Destination...</option>
                                    </select>
                                    <span asp-validation-for="TransferToAccountId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Date" class="form-label"></label>
                            <input asp-for="Date" class="form-control" type="date" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Notes (Optional)</label>
                            <textarea asp-for="Description" class="form-control" rows="2" placeholder="e.g., Monthly savings transfer"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Complete Transfer</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="text-muted">How Transfers Work</h6>
                    <p class="small text-muted mb-0">
                        A transfer creates two linked transactions: an expense from the source account and
                        income to the destination account. This keeps your balances accurate while not
                        affecting your income/expense reports.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Prevent selecting the same account for both source and destination
        document.getElementById('AccountId').addEventListener('change', function() {
            var toAccount = document.getElementById('TransferToAccountId');
            var fromValue = this.value;
            Array.from(toAccount.options).forEach(function(option) {
                option.disabled = option.value === fromValue && fromValue !== '';
            });
        });
        document.getElementById('TransferToAccountId').addEventListener('change', function() {
            var fromAccount = document.getElementById('AccountId');
            var toValue = this.value;
            Array.from(fromAccount.options).forEach(function(option) {
                option.disabled = option.value === toValue && toValue !== '';
            });
        });
    </script>
}
