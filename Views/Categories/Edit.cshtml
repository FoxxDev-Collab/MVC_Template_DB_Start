@model HLE.FamilyFinance.Models.ViewModels.CategoryEditViewModel
@{
    ViewData["Title"] = "Edit Category";
}

<div class="py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Categories</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Edit Category</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Type" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Type</label>
                            <input type="text" class="form-control-plaintext" value="@Model.Type" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ParentCategoryId" class="form-label">Parent Category</label>
                            <select asp-for="ParentCategoryId" asp-items="@(ViewData["ParentCategories"] as SelectList)" class="form-select">
                                <option value="">None (Top-level category)</option>
                            </select>
                            <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Icon" class="form-label">Icon (Emoji)</label>
                                    <input asp-for="Icon" class="form-control" maxlength="10" />
                                    <span asp-validation-for="Icon" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Color" class="form-label">Color</label>
                                    <input asp-for="Color" class="form-control form-control-color" type="color" />
                                    <span asp-validation-for="Color" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
