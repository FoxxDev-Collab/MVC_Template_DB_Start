@{
    ViewData["Title"] = "Home";
    var firstName = ViewData["FirstName"]?.ToString();
    var lastName = ViewData["LastName"]?.ToString();
    var userName = ViewData["UserName"]?.ToString();
    var isAuthenticated = User.Identity?.IsAuthenticated == true;

    var displayName = !string.IsNullOrEmpty(firstName) && !string.IsNullOrEmpty(lastName)
        ? $"{firstName} {lastName}"
        : !string.IsNullOrEmpty(firstName)
            ? firstName
            : !string.IsNullOrEmpty(userName)
                ? userName
                : "Guest";
}

@if (!isAuthenticated)
{
    <!-- Enterprise Landing Page for Non-Authenticated Users -->
    <div class="landing-page">
        <!-- Hero Section -->
        <div class="hero-section text-center py-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="hero-badge mb-4">
                            <span class="badge bg-primary px-4 py-2">
                                <i class="bi bi-shield-check"></i> SECURE ENTERPRISE PLATFORM
                            </span>
                        </div>
                        <h1 class="display-3 fw-bold mb-4">
                            HLE Template
                        </h1>
                        <p class="lead mb-4" style="font-size: 1.35rem; color: var(--muted-foreground); max-width: 700px; margin: 0 auto;">
                            Enterprise-grade application template with Authentik SSO integration.
                            Secure, scalable, and built for operational excellence.
                        </p>
                        <div class="d-flex gap-3 justify-content-center mt-5">
                            <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg px-5 py-3">
                                <i class="bi bi-shield-lock"></i> Secure Sign In
                            </a>
                        </div>
                        <p class="mt-4 text-muted small">
                            <i class="bi bi-info-circle"></i> Authenticated via Authentik SSO
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features Grid -->
        <div class="container my-5 py-5">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon mb-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-shield-lock text-primary" viewBox="0 0 16 16">
                                    <path d="M5.338 1.59a61.44 61.44 0 0 0-2.837.856.481.481 0 0 0-.328.39c-.554 4.157.726 7.19 2.253 9.188a10.725 10.725 0 0 0 2.287 2.233c.346.244.652.42.893.533.12.057.218.095.293.118a.55.55 0 0 0 .101.025.615.615 0 0 0 .1-.025c.076-.023.174-.061.294-.118.24-.113.547-.29.893-.533a10.726 10.726 0 0 0 2.287-2.233c1.527-1.997 2.807-5.031 2.253-9.188a.48.48 0 0 0-.328-.39c-.651-.213-1.75-.56-2.837-.855C9.552 1.29 8.531 1.067 8 1.067c-.53 0-1.552.223-2.662.524zM5.072.56C6.157.265 7.31 0 8 0s1.843.265 2.928.56c1.11.3 2.229.655 2.887.87a1.54 1.54 0 0 1 1.044 1.262c.596 4.477-.787 7.795-2.465 9.99a11.775 11.775 0 0 1-2.517 2.453 7.159 7.159 0 0 1-1.048.625c-.28.132-.581.24-.829.24s-.548-.108-.829-.24a7.158 7.158 0 0 1-1.048-.625 11.777 11.777 0 0 1-2.517-2.453C1.928 10.487.545 7.169 1.141 2.692A1.54 1.54 0 0 1 2.185 1.43 62.456 62.456 0 0 1 5.072.56z"/>
                                    <path d="M9.5 6.5a1.5 1.5 0 0 1-1 1.415l.385 1.99a.5.5 0 0 1-.491.595h-.788a.5.5 0 0 1-.49-.595l.384-1.99a1.5 1.5 0 1 1 2-1.415z"/>
                                </svg>
                            </div>
                            <h4 class="mb-3">Enterprise Security</h4>
                            <p class="text-muted">
                                Built with security best practices. OpenID Connect authentication, encrypted sessions, and role-based access control.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon mb-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-speedometer2 text-success" viewBox="0 0 16 16">
                                    <path d="M8 4a.5.5 0 0 1 .5.5V6a.5.5 0 0 1-1 0V4.5A.5.5 0 0 1 8 4M3.732 5.732a.5.5 0 0 1 .707 0l.915.914a.5.5 0 1 1-.708.708l-.914-.915a.5.5 0 0 1 0-.707M2 10a.5.5 0 0 1 .5-.5h1.586a.5.5 0 0 1 0 1H2.5A.5.5 0 0 1 2 10m9.5 0a.5.5 0 0 1 .5-.5h1.5a.5.5 0 0 1 0 1H12a.5.5 0 0 1-.5-.5m.754-4.246a.39.39 0 0 0-.527-.02L7.547 9.31a.91.91 0 1 0 1.302 1.258l3.434-4.297a.39.39 0 0 0-.029-.518z"/>
                                    <path fill-rule="evenodd" d="M0 10a8 8 0 1 1 15.547 2.661c-.442 1.253-1.845 1.602-2.932 1.25C11.309 13.488 9.475 13 8 13c-1.474 0-3.31.488-4.615.911-1.087.352-2.49.003-2.932-1.25A8 8 0 0 1 0 10m8-7a7 7 0 0 0-6.603 9.329c.203.575.923.876 1.68.63C4.397 12.533 6.358 12 8 12s3.604.532 4.923.96c.757.245 1.477-.056 1.68-.631A7 7 0 0 0 8 3"/>
                                </svg>
                            </div>
                            <h4 class="mb-3">High Performance</h4>
                            <p class="text-muted">
                                Built on .NET 10 LTS with PostgreSQL 17. Optimized for speed, reliability, and scalability in production environments.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="feature-icon mb-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-diagram-3 text-info" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M6 3.5A1.5 1.5 0 0 1 7.5 2h1A1.5 1.5 0 0 1 10 3.5v1A1.5 1.5 0 0 1 8.5 6v1H14a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-1 0V8h-5v.5a.5.5 0 0 1-1 0V8h-5v.5a.5.5 0 0 1-1 0v-1A.5.5 0 0 1 2 7h5.5V6A1.5 1.5 0 0 1 6 4.5zm-6 8A1.5 1.5 0 0 1 1.5 10h1A1.5 1.5 0 0 1 4 11.5v1A1.5 1.5 0 0 1 2.5 14h-1A1.5 1.5 0 0 1 0 12.5zm6 0A1.5 1.5 0 0 1 7.5 10h1a1.5 1.5 0 0 1 1.5 1.5v1A1.5 1.5 0 0 1 8.5 14h-1A1.5 1.5 0 0 1 6 12.5zm6 0a1.5 1.5 0 0 1 1.5-1.5h1a1.5 1.5 0 0 1 1.5 1.5v1a1.5 1.5 0 0 1-1.5 1.5h-1a1.5 1.5 0 0 1-1.5-1.5z"/>
                                </svg>
                            </div>
                            <h4 class="mb-3">Ready to Deploy</h4>
                            <p class="text-muted">
                                Docker/Podman ready with health checks, logging, and production configurations out of the box.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tech Stack -->
        <div class="bg-light py-5">
            <div class="container">
                <div class="text-center mb-4">
                    <h3 class="mb-3">Enterprise Technology Stack</h3>
                    <p class="text-muted">Built on proven, enterprise-grade technologies</p>
                </div>
                <div class="row g-4 justify-content-center">
                    <div class="col-auto">
                        <div class="tech-badge">.NET 10 LTS</div>
                    </div>
                    <div class="col-auto">
                        <div class="tech-badge">PostgreSQL 17</div>
                    </div>
                    <div class="col-auto">
                        <div class="tech-badge">Authentik SSO</div>
                    </div>
                    <div class="col-auto">
                        <div class="tech-badge">Podman</div>
                    </div>
                    <div class="col-auto">
                        <div class="tech-badge">OpenID Connect</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .landing-page {
            background: linear-gradient(180deg, var(--background) 0%, var(--muted) 100%);
        }

        .hero-section {
            min-height: 60vh;
            display: flex;
            align-items: center;
        }

        .hero-badge .badge {
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

        .feature-icon {
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .tech-badge {
            background: var(--card);
            border: 1px solid var(--border);
            padding: 0.75rem 1.5rem;
            border-radius: 2rem;
            font-weight: 500;
            font-size: 0.9rem;
            color: var(--foreground);
        }
    </style>
}
else
{
    <!-- Authenticated Dashboard -->
    <div class="container-fluid py-4">
        <!-- Welcome Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex align-items-center gap-3 mb-3">
                    @{
                        ViewData["Initials"] = string.IsNullOrEmpty(firstName) && string.IsNullOrEmpty(lastName)
                            ? (string.IsNullOrEmpty(userName) ? "U" : userName.Substring(0, Math.Min(2, userName.Length)).ToUpper())
                            : $"{firstName?.FirstOrDefault() ?? ' '}{lastName?.FirstOrDefault() ?? ' '}".Trim();
                        ViewData["Size"] = "lg";
                        ViewData["Status"] = "online";
                    }
                    <partial name="_Avatar" />
                    <div>
                        <h2 class="mb-0">Welcome back, @displayName</h2>
                        <p class="text-muted mb-0">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="row g-4 mb-4">
            <div class="col-md-3 col-sm-6">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="text-primary mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M2 2a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H2zm6 2.5a.5.5 0 0 1 .5.5v2.5H11a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V8.5H5a.5.5 0 0 1 0-1h2.5V5a.5.5 0 0 1 .5-.5z"/>
                            </svg>
                        </div>
                        <h3 class="mb-2">--</h3>
                        <p class="text-muted mb-0">Stat One</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="text-success mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                            </svg>
                        </div>
                        <h3 class="mb-2">--</h3>
                        <p class="text-muted mb-0">Stat Two</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="text-info mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M0 1.5A1.5 1.5 0 0 1 1.5 0h13A1.5 1.5 0 0 1 16 1.5v13a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13zM1.5 1a.5.5 0 0 0-.5.5v13a.5.5 0 0 0 .5.5H5V1H1.5zM10 15V1H6v14h4zm1 0h3.5a.5.5 0 0 0 .5-.5v-13a.5.5 0 0 0-.5-.5H11v14z"/>
                            </svg>
                        </div>
                        <h3 class="mb-2">--</h3>
                        <p class="text-muted mb-0">Stat Three</p>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="text-warning mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M1 11a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1v-3zm5-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1V2z"/>
                            </svg>
                        </div>
                        <h3 class="mb-2">--</h3>
                        <p class="text-muted mb-0">Stat Four</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card h-100">
                    <div class="card-header bg-transparent">
                        <h5 class="mb-0">Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <a href="/Settings" class="btn btn-outline-primary w-100 py-3">
                                    <i class="bi bi-gear"></i> Settings
                                </a>
                            </div>
                            <div class="col-md-6">
                                <a href="/Components/Demo" class="btn btn-outline-secondary w-100 py-3">
                                    <i class="bi bi-palette"></i> UI Components
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card h-100">
                    <div class="card-header bg-transparent">
                        <h5 class="mb-0">System Status</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span>Database</span>
                            <span class="badge bg-success">Online</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span>Authentication</span>
                            <span class="badge bg-success">Connected</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span>API Services</span>
                            <span class="badge bg-success">Running</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
